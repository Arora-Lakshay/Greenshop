<section class="cart py-16">
  <% if(session.cart) { %>
  <div class="order container mx-auto lg:w-2/5 xl:w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="/img/cart-black.png">
      <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
    </div>
    <div class="order-list">
      <% for(let pizza of Object.values(session.cart.items)){ %>
      <div class="flex items-center my-8">
        <img class="w-12 md:w-24" src="/img/<%= pizza.item.image %>" alt="item-thumbnail">
        <div class="flex-1 ml-4">
          <p><%= pizza.item.name %></p>
          <span style="color: rebeccapurple;"><%= pizza.item.size %></span>
        </div>
        <div class="flex-1 md:ml-2 lg:ml-4">
          <a style="background: #eee;border: 1px solid #222;" href="/cart/inc/<%= pizza.item.id %>" id="increament"
            class="inline-block cursor-pointer rounded-sm md:text-sm lg:text-lg py-0 px-1 mr-1"
            data-pizzaID="<%= pizza.item.id %>">+</a>
          <span class="flex-1 sm:text-center"><%= pizza.qty %> Pcs</span>
          <a style="background: #eee;border: 1px solid #222;" href="/cart/dec/<%= pizza.item.id %>" id="decreament"
            class="inline-block cursor-pointer rounded-sm md:text-sm lg:text-lg py-0 px-1 ml-1"
            data-pizzaID="<%= pizza.item.id %>">-</a>
        </div>
        <span class="font-bold text-lg ml-1">₹<%= pizza.item.price * pizza.qty %></span>
      </div>
      <% } %>
    </div>
    <hr>
    <div class="text-right py-4">
      <div>
        <span class="text-lg font-bold">Total Amount : </span>
        <span class="ammount text-2xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
      </div>
      <% if(user){ %>
      <a href="/checkout"
        class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Proceed to
        Checkout</a>
      <% } else { %>
      <a href="/login"
        class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login
        to continue</a>
      <% } %>
    </div>
  </div>
  <% } else { %>
  <div class="empty-cart py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
      <p class="text-gray-500 text-lg mb-12">You probably haven't ordered anything yet<br>To order a pizza, checkout our
        <a href="/#menu" title="This is our menu for all available pizzas" style="color:orangered">menu</a>
        available at home page.</p>
      <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
      <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
    </div>
  </div>
  <% } %>
</section>